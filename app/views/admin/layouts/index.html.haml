- @page_title = 'Layouts - ' + default_page_title

.outset
  - render_region :top
  %table#layouts.index{:cellspacing=>"0", :border=>"0", :cellpadding=>"0" }
    %thead
      %tr
        - render_region :thead do |thead|
          - thead.title_header do
            %th.layout
              = t('views.layouts.layout')
          - thead.modify_header do
            %th.modify
              = t('views.shared.modify')
    %tbody
      - if @layouts.any?
        - @layouts.each do |layout|
          %tr.node.level_1
            - render_region :tbody do |tbody|
              - tbody.title_cell do
                %td.layout
                  = image('layout', :alt => 'layout-icon')
                  = link_to layout.name, edit_admin_layout_url(layout)
              - tbody.modify_cell do
                %td.remove
                  = link_to t('views.shared.remove'), remove_admin_layout_url(layout)
      - else
        %tr
          %td.note{:colspan => admin.layout.index.tbody.length} No Layouts

- render_region :bottom do |bottom|
  - bottom.new_button do
    #actions
      %ul
        %li= link_to t('views.layouts.new_layout'), new_admin_layout_url