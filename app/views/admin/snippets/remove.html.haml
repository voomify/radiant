%h1= t('remove_snippet')

%p 
  = t('text.snippets.remove_warning')

%table.index#snippets{:cellpadding=>0, :cellspacing=>0, :border=>0}
  %tbody
    %tr.node.level_1
      %td.snippet
        = image('snippet', :alt => "snippet-icon")
        %span.title= @snippet.name

- form_for [:admin, @snippet], :html => {:method => :delete, :onsubmit_status=>"Removing snippet&#8230;"} do
  %p.buttons
    %input.button{:type=>"submit", :value => t('delete_snippet')}/
    = t('or')
    = link_to t('cancel'), admin_snippets_url