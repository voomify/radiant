%h1 Remove User

%p 
  = t('remove_warning_text')

%table.index#users{:cellpadding=>0, :cellspacing=>0, :border=>0}
  %tbody
    %tr.node.level_1
      %td.user
        %span.title= @user.name

- form_for [:admin, @user], :html => { :method => :delete, :onsubmit_status=>"Removing user&#8230;" } do
  %p.buttons
    %input.button{:type=>"submit", :value => t('delete_user')}/
    = t('or')  
    = link_to t('cancel'), admin_users_path