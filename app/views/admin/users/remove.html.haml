%h1 Remove User

%p 
  = t('views.users.remove_warning_text')

%table.index#users{:cellpadding=>0, :cellspacing=>0, :border=>0}
  %tbody
    %tr.node.level-1
      %td.user
        %span.title= @user.name

- form_for [:admin, @user], :html => { :method => :delete } do
  %p.buttons
    %input.button{:type=>"submit", :value => t('views.users.delete_user')}/
    = t('views.shared.or')  
    = link_to t('views.shared.cancel'), admin_users_path